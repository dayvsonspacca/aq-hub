{
    "name": "dayvsonspacca/aq-wiki",
    "type": "project",
    "scripts": {
        "test": "./vendor/bin/pest",
        "fmt": "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "autoload": {
        "psr-4": {
            "AqWiki\\": "src/",
            "AqWiki\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Dayvson Spacca",
            "email": "spacca.dayvson@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.73"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
