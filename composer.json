{
    "name": "dayvsonspacca/aq-hub",
    "type": "project",
    "scripts": {
        "test": "./vendor/bin/pest --testsuite='Unit tests'",
        "test-all": "./vendor/bin/pest",
        "fmt": "./vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "tests-coverage": "./vendor/bin/phpunit --coverage-html coverage/",
        "gen-api-doc": "./vendor/bin/openapi src -o public/api-docs.yaml"
    },
    "autoload": {
        "psr-4": {
            "AqHub\\": "src/",
            "AqHub\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Dayvson Spacca",
            "email": "spacca.dayvson@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.3",
        "guzzlehttp/guzzle": "^7.10",
        "php-di/php-di": "^7.1",
        "symfony/http-foundation": "^7.3",
        "symfony/routing": "^7.3",
        "dayvsonspacca/aqw-socket-client": "dev-main",
        "aura/sqlquery": "*",
        "monolog/monolog": "^3.9",
        "vlucas/phpdotenv": "^5.6",
        "symfony/cache": "^7.3",
        "zircote/swagger-php": "^5.5",
        "firebase/php-jwt": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.73",
        "symfony/var-dumper": "^7.3"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
